# Source this before sourcing the dot_bash_profile script
export VGIT_USERNAME=delano

if [ -d /home/vagrant ]; then
   # vagrant related stuff
   SETTINGS_FILE=settings_reporting_slaves_tunnel
   alias venmo_dash_server_slaves="cd /ebs/appvenmo && export APPROOT=./ && export DJANGO_SETTINGS_MODULE=$SETTINGS_FILE && /ebs/venmo-ve/bin/ipython -- /ebs/appvenmo/dashboard/main.py --port=7001"
   alias venmo_slave_tunnels="/vagrant_data/venmo-data-science/bin/create_slave_tunnels.sh"
else
   SETTINGS_FILE=settings_reporting_slaves
fi

# starting the shell from different places, all against the slaves, if production is needed do it manually!
alias venmo_shell_slaves_appvenmo="cd /ebs/appvenmo && export APPROOT=/ebs/appvenmo && export PYTHONPATH=/ebs/appvenmo:/ebs/venmo-data-science && export DJANGO_SETTINGS_MODULE=$SETTINGS_FILE && ipython --pdb manage.py shell -- --settings=$SETTINGS_FILE"
alias venmo_shell_slaves_current_dir="export APPROOT=./ && export PYTHONPATH=../venmo-data-science && export DJANGO_SETTINGS_MODULE=$SETTINGS_FILE && ipython --pdb manage.py shell -- --settings=$SETTINGS_FILE"

alias venmo_rebuild_tags="cd ~/working/venmo-devops && find . -name '*.py' | etags --output tags -"

# if the venmo box name is set then use it in the prompt
if [ ! -z "$VENMO_BOX_LABEL" ]; then 
   PROMPT_HOST=$VENMO_BOX_LABEL
fi
